table, th, td {
border: 4px solid black;
border-color:blue;
}

table {
  border-collapse: collapse;
  width: 100%;
}

th, th{
  height: 50px;
  text-align:center;
}
body{
	background-image:url('../img/font1.jpg');
 background-repeat: no-repeat;
  background-size:100%;
background-color:green;
	font-size:25px;
		color:white;
}
div{
	width:500px;
	height:100px;
	background-color:red;
	position:relative;
	animation: myfirst 5s linear 2s infinite alternate;
	text-align:center;
	
}
@keyframes myfirst{
	0%{background-color:red; left:0px; right:0px;}
	25%{background-color:yellow; left:820px; right:0px;}
	50%{background-color:blue; left:820px ;right:820px;}
	75%{background-color:green; left:0px; right:820px;}
	100%{background-color:red; left:0px ;right:0px;}
}